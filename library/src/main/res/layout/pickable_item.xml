<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flItemValue"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_two_line_normal_height"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivItemValueAvatar"
        android:layout_width="@dimen/material_list_avatar_size"
        android:layout_height="@dimen/material_list_avatar_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/material_list_icon_first_position_margin_start"
        android:scaleType="centerCrop"
        tools:src="@drawable/tools_letter_avatar" />

    <LinearLayout
        android:id="@+id/llItemValueBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/material_list_text_second_position_edge_margin_start"
        android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvItemValueName"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_list_text_gutter"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/tools_item_value_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvItemValueDescription"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/tools_item_value_description" />

    </LinearLayout>

</FrameLayout>